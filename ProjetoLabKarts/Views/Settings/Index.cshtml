@{
    ViewData["Title"] = "Configurações Gerais";
    var views = (string[])ViewBag.ViewsList;
    var names = (Dictionary<string, string>)ViewBag.DisplayNames;
}

<div class="container py-4">
    <!-- Título -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h1 class="fs-1 mb-0">Configurações</h1>
            <p class="lead fs-6 mb-0">Gere as tuas Configurações</p>
        </div>
        <button type="button"
                class="btn btn-outline-secondary"
                onclick="location.href='@Url.Action("Index","Dashboard")'">
            ← Voltar
        </button>
    </div>

    <!-- Card principal -->
    <div class="card shadow border rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-0">Configurações das Listas</h4>
            <ul class="list-group list-group-flush mt-3">
                @foreach (var v in views)
                {
                    var label = names.ContainsKey(v) ? names[v] : v;
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">@label</span>
                        <a asp-action="Edit"
                           asp-route-viewName="@v"
                           class="btn btn-sm btn-primary">
                            Configurar
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
